<h1 class="col-md-10 col-md-offset-1"> Update contact information </h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    
    <div>
    <%= form_for(@book) do |f| %>
      <%= f.label :phone, class: "col-md-12 form_tag" %>
      <%= f.text_field :phone, class: "col-md-8 form_tag" %>
      
      <%= f.label :address, class: "col-md-12 form_tag" %>
      <%= f.text_field :address, class: "col-md-8 form_tag" %>
      
      <%= f.label :opentime, class: "col-md-12 form_tag" %>
      <%= f.text_field :opentime, class: "col-md-8 form_tag" %>
      
      <%= f.label :closetime, class: "col-md-12 form_tag" %>
      <%= f.text_field :closetime, class: "col-md-8 form_tag" %>
      
      <div class="col-md-10 book_button">
        <% if @user.books.any? %>
          <%= f.submit "Update contact information", class: "btn btn-primary" %>
        <% else %>
          <%= f.submit "Create contact information", class: "btn btn-primary" %>
        <% end %>
      </div>
      
    <% end %>
    </div>
  </div>
</div>