<%= render 'shared/errors', obj: @sort %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@sort, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "輸入商品類別",autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit '儲存', class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to '全部商品類別', articles_path %> ]
    </div>
  </div>
</div>